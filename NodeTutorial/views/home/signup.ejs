<%- include('../_partial/_header'); -%>
<div class="col-8">

    <div class="panel panel-default">

        <div class="panel-heading">
            <h3>Sign Up</h3>
        </div>
        <div class="panel-body">
            <form class="form-signin" method="POST" action="/signup">
                <div class="form-floating">
                    <input type="input-group-text" class="form-control" id="basic-addon1" placeholder="myUserName">
                    <label for="floatingInput">Username</label>
                </div><br/>
                <div class="form-floating">
                    <input type="email" class="form-control" id="basic-addon1" placeholder="name@example.com">
                    <label for="floatingInput">Email address</label>
                </div><br/>
                <div class="form-floating">
                    <input type="password" class="form-control" id="basic-addon1" placeholder="Password">
                    <label for="floatingPassword">Password</label>
                </div><br/>
                <div class="form-floating">
                    <input type="password" class="form-control" id="basic-addon1" placeholder="Re-password">
                    <label for="floatingPassword">Re-password</label>
                </div><br/>
                <input type="submit" class="btn btn-primary" value="Sign Up" />
            </form>
        </div>
    </div>
</div>



<%- include('../_partial/_footer'); -%>